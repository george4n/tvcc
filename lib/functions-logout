      echo "90"
      echo "# Closing Applications"

      ) |
      zenity --progress \
        --title="Logging out..." \
        --text="First Task." \
        --percentage=0 \
        --pulsate \
        --auto-close \
        --auto-kill

      (( $? != 0 )) && zenity --error --text="Error: Could not complete task."

      sleep 5
      DISPLAY=:0 gnome-session-quit --force
      DISPLAY=:0 gnome-session-quit --force
      exit 0
        pkill -u $USER

    else
       exit
    fi


}

