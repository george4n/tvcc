        --auto-close \
        --auto-kill

      (( $? != 0 )) && zenity --error --text="Error: Could not complete task."
killall tvcc*
session=`loginctl session-status | head -n 1 | awk '{print $1}'`
loginctl terminate-session $session      

  else
   exit
  fi
  fi


}


